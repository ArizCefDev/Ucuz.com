@model IEnumerable<DTO.DTOEntity.ProductDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-heading">
	<h2>Products</h2>
</div>
<div class="agile-tables">
	<div class="w3l-table-info">
		<h3>Product table</h3>
		<a asp-controller="Admin" asp-action="Add" class="btn btn-primary">New</a>
		<table id="table">
			<thead>
				<tr>
					<th>ID</th>
					<th>Photo</th>
					<th>Name</th>
					<th>Price</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.ID</td>
						<td><img src="@item.Image"  style="width:70px; height:100px;"/></td>
						<td>@item.Name</td>
						<td>@item.Price</td>
						<td><a asp-controller="Admin" asp-action="Update" asp-route-id="@item.ID" class="btn btn-success">Update</a></td>
						<td><a asp-controller="Admin" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a></td>
					</tr>
				}
			</tbody>
		</table>
	</div>

</div>
